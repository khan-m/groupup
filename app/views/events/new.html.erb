<% provide(:title, 'New Event') %>
<h1>Create new event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.label :event_host %>
      <%= f.text_field :event_host %>


      <%= f.submit "Create my event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>