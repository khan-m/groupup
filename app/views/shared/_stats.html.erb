<% @user ||= current_user %>
<div class="stats">
  <a href="<%= myevents_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.events.count %>
    </strong>
    created events
  </a>
  <a href="<%= attendingevents_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.events.count %>
    </strong>
    attending events
  </a>
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>